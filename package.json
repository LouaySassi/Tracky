{
  "name": "tracky",
  "version": "1.0.0",
  "description": "Tracky - Local Finance Tracker Desktop Application",
  "private": true,
  "main": "electron/main.js",
  "type": "commonjs",
  "author": "LouaySassi",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "node server/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "vite build",
    "build:electron": "npm run build:frontend && electron-builder",
    "start": "electron .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.tracky.app",
    "productName": "Tracky",
    "directories": {
      "output": "C:/Users/LouaySassi/Desktop/Tracky-Build"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "Tracky-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": false,
      "shortcutName": "Tracky"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "lucide-react": "^0.522.0",
    "recharts": "^2.12.7",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "better-sqlite3": "^11.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.18",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "latest",
    "concurrently": "^9.1.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.7",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "postcss": "latest",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^5.2.0"
  }
}